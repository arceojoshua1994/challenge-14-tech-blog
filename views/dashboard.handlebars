<h2>Your Posts</h2>

{{#each posts as |post|}}
<div class="post">
    <h3>{{post.title}}</h3>
    <p>{{post.content}}</p>
    
</div>
{{/each}}

<form action="/api/posts" method="post">
    <input type="text" name="title" placeholder="Title">
    <textarea name="content" placeholder="Content"></textarea>
    <button type="submit">Create Post</button>
</form>
